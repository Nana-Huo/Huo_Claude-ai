/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #fff8fb;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

/* 主题色彩 */
.primary-color {
  color: #ff6b9d;
}

.primary-bg {
  background-color: #ff6b9d;
  color: white;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(255, 107, 157, 0.1);
  margin: 20rpx;
  padding: 30rpx;
}

/* 按钮样式 */
.btn {
  border-radius: 50rpx;
  padding: 25rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8fab);
  color: white;
}

.btn-primary:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, #ff5582, #ff7a99);
}

/* 输入框样式 */
.input {
  border: 2rpx solid #f0f0f0;
  border-radius: 25rpx;
  padding: 25rpx 30rpx;
  font-size: 28rpx;
  background: white;
  margin: 15rpx 0;
}

.input:focus {
  border-color: #ff6b9d;
  box-shadow: 0 0 20rpx rgba(255, 107, 157, 0.2);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 20rpx;
}

.grid-item {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s ease;
}

.grid-item:active {
  transform: scale(0.95);
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff6b9d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}