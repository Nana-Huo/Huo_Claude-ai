<!--pages/services/services.wxml-->
<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-container">
      <image class="search-icon" src="/images/search.png"></image>
      <input class="search-input" placeholder="搜索美甲服务..." bindinput="onSearch" />
    </view>
  </view>

  <!-- 分类标签 -->
  <view class="category-tabs">
    <scroll-view class="tabs-scroll" scroll-x="true" style="width: 100%;">
      <view class="tabs-container">
        <block wx:for="{{categories}}" wx:key="id">
          <view class="tab-item {{item.active ? 'active' : ''}}" bindtap="selectCategory" data-category-id="{{item.id}}">
            <text class="tab-text">{{item.name}}</text>
          </view>
        </block>
      </view>
    </scroll-view>
  </view>

  <!-- 服务列表 -->
  <view class="services-container">
    <block wx:if="{{loading}}">
      <view class="loading">
        <view class="loading-spinner"></view>
        <text class="loading-text">加载中...</text>
      </view>
    </block>

    <block wx:elif="{{filteredServices.length > 0}}">
      <block wx:for="{{filteredServices}}" wx:key="id">
        <view class="service-item" bindtap="goToBooking" data-service-id="{{item.id}}">
          <view class="service-main">
            <image class="service-image" src="{{item.image}}" mode="aspectFill"></image>
            <view class="service-content">
              <view class="service-header">
                <text class="service-name">{{item.name}}</text>
                <view class="popular-badge" wx:if="{{item.popular}}">热门</view>
              </view>
              
              <text class="service-description">{{item.description}}</text>
              
              <view class="service-features">
                <block wx:for="{{item.features}}" wx:for-item="feature" wx:key="*this">
                  <text class="feature-tag">{{feature}}</text>
                </block>
              </view>
              
              <view class="service-footer">
                <view class="price-container">
                  <text class="current-price">¥{{item.price}}</text>
                  <text class="original-price" wx:if="{{item.originalPrice}}">¥{{item.originalPrice}}</text>
                </view>
                <view class="service-meta">
                  <text class="duration">{{item.duration}}</text>
                  <view class="rating">
                    <text class="star">★</text>
                    <text class="rating-value">{{item.rating}}</text>
                  </view>
                </view>
              </view>
            </view>
          </view>
          
          <view class="service-action">
            <view class="book-btn">立即预约</view>
          </view>
        </view>
      </block>
    </block>

    <block wx:else>
      <view class="empty-state">
        <image class="empty-icon" src="/images/empty-services.png"></image>
        <text class="empty-text">暂无相关服务</text>
        <text class="empty-desc">请尝试其他分类或搜索关键词</text>
      </view>
    </block>
  </view>
</view>